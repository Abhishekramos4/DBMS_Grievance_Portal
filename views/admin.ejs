    <script>
      $(document).ready(function () {
       
        
        $.getJSON("/admin", function (data) {
          var completeHTML = "";
          $.each(data, function (index, value) {
            var singlecomplaint = `singlecomplaint${index}`;
            var complaintid = `id${index}`;
            var buttonid = `solved${index}`;
            var textid=`text${index}`;
            var x =
              "<div id='" +
              singlecomplaint +
              "'>\
                <div class='Container' style='margin: 1% 3% 1% 3%;border: 1px solid grey;padding: 2%;border-radius: 20px;box-shadow: 1px 1px 2px 1px grey;''>\
                  <h5 id='" +
              complaintid +
              "'>Complaint ID:  " +
              value["_id"] +
              "</h5>\
              <hr />\
                  <h5>Student ID: " +
              value["studentID"] +
              "</h5>\
                     <hr />\
                  <h5>Location:  " +
              value["location"] +
              "</h5>\
                     <hr />\
                     <h5>Section:  " +
              value["section"] +
              "</h5>\
                     <hr />\
                     <h5>Description:  " +
              value["description"] +
              "</h5>\
                     <hr />\
                     <h5>Date:  " +
              value["dateIssued"] +
              "</h5>\
              <hr />\
             <div class='form-group'> <textarea id ='"+textid +"' class='form-control' placeholder='FeedBack'rows='5'></textarea></div>\
              <button id='" +
              buttonid +
              "'class='btn btn-dark solvedbtn'>Solved</button>\
                </div>\
                </div>\
                     ";
            completeHTML += x;
          });
          $("#complaintdiv").html(completeHTML);
          var arr = $(".solvedbtn");
          for (var i = 0; i < arr.length; i++) {
            arr[i].addEventListener("click", function () {
              var complaintid=`id${this.id[6]}`
              var id=document.getElementById(complaintid).textContent.slice(15);
              var feedback=$(`#text${this.id[6]}`).val();
              $(`#singlecomplaint${this.id[6]}`).empty();
              $.post('/solved-complaints',{id:id,isSolved:true,feedback:feedback},
              function(){console.log("Post request sent");
              });

            });
          }

          $(".solvedbtn").click(function () {});
        });
      });
    </script>
