<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin</title>
    <!-- BootStrap -->
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
      integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh"
      crossorigin="anonymous"
    />
    <script
      src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
      integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
      integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"
      integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
      crossorigin="anonymous"
    ></script>
    <!-- Custom CSS -->
    <link rel="stylesheet" href="css/profile.css" />
    <!-- Jquery CDN -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <!-- Jquery -->
    <script>
      $(document).ready(function () {
        $.getJSON("/admin", function (data) {
          var completeHTML = "";
          $.each(data, function (index, value) {
            var singlecomplaint = `singlecomplaint${index}`;
            var complaintid = `id${index}`;
            var buttonid = `solved${index}`;
            var x =
              "<div id='" +
              singlecomplaint +
              "'>\
                <div class='Container' style='margin: 1% 3% 1% 3%;border: 1px solid grey;padding: 2%;border-radius: 50px;box-shadow: 1px 1px 2px 1px grey;''>\
                  <h4 id='" +
              complaintid +
              "'>Complaint ID:" +
              value["_id"] +
              "</h4>\
                     <hr style='width: 90%;' />\
                  <h4>Location :" +
              value["location"] +
              "</h4>\
                     <hr style='width: 90%;' />\
                     <h4>Section:" +
              value["section"] +
              "</h4>\
                     <hr style='width: 90%;' />\
                     <h4>Description:" +
              value["description"] +
              "</h4>\
                     <hr style='width: 90%;' />\
                     <h4>Date:" +
              value["dateIssued"] +
              "</h4>\
                <button id='" +
              buttonid +
              "'class='btn btn-dark solvedbtn'>Solved</button>\
                </div>\
                </div>\
                     ";
            completeHTML += x;
          });
          $("#complaintdiv").html(completeHTML);
          var arr = $(".solvedbtn");
          for (var i = 0; i < arr.length; i++) {
            arr[i].addEventListener("click", function () {
              var complaintid=`id${this.id[6]}`
              var id=document.getElementById(complaintid).textContent.slice(13);
              $(`#singlecomplaint${this.id[6]}`).empty();
              $.post('/solved-complaints',{id:id,isSolved:true},
              function(){console.log("Post request sent");
              });

            });
          }

          $(".solvedbtn").click(function () {});
        });
      });
    </script>
  </head>
  <body>
    <div id="complaintdiv"></div>
  </body>
</html>
